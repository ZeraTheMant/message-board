extends layout

block content
	h1= title

	form(method='POST' action='')
		div.form-group
			label(for='name') !{'<strong>Name:</strong>'}
			input#name.form-control(type='text' placeholder='Enter full name' name='name' required='true')
			label(for='message') !{'<strong>Message:</strong>'}
			textarea#message.form-control(type='text' placeholder='Enter message' name='message' required='true' rows='3')
		button.btn.btn-primary(type='submit') Submit
		
		if errors
			ul
				for error in errors
					li!= error.msg
